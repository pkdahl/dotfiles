# -*- mode: shell-script; fill-column: 72; -*-
# ~/.zshrc is sourced in interactive shells.

bindkey -e # Emacs keybindings

setopt AUTO_PUSHD         # Any directory changing command is treated as pushd
DIRSTACKSIZE=8
setopt NO_BEEP            # Never beep

source $ZSH_CONFIG_HOME/aliases.zsh
source $ZSH_CONFIG_HOME/completion.zsh
source $ZSH_CONFIG_HOME/history.zsh

# Liquid Prompt
if [ -f /usr/local/share/liquidprompt ]; then
	[[ $- = *i* ]] && source /usr/local/share/liquidprompt;
elif [ -f ${XDG_DATA_HOME}/liquidprompt ]; then
	[[ $- = *i* ]] && source ${XDG_DATA_HOME}/liquidprompt;
fi

which direnv &> /dev/null && eval "$(direnv hook zsh)"

# OPAM configuration
. /Users/pkdahl/.opam/opam-init/init.zsh > /dev/null 2> /dev/null || true
