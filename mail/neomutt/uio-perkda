named-mailboxes "UiO (perkda)" ""
named-mailboxes "Inbox" =uio-perkda/inbox
named-mailboxes "Archive" =uio-perkda/archive
named-mailboxes "Sent" =uio-perkda/sent
named-mailboxes "Drafts" =uio-perkda/drafts
named-mailboxes "Trash" =uio-perkda/trash

set spoolfile="+uio-perkda/inbox"
set mbox="+uio-perkda/archive"
set record="+uio-perkda/sent"
set postponed="+uio-perkda/drafts"
set trash="+uio-perkda/trash"

set status_format="--- [UiO/perkda] %D%> ---"
