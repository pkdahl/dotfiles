#-------------------------------------------------------------------------------
# UiO - perkda
#-------------------------------------------------------------------------------

IMAPAccount uio-perkda
Host mail.uio.no
User perkda
PassCmd "security find-generic-password -a uio-perkda -s mbsync-uio-perkda -w"
AuthMechs LOGIN

IMAPStore uio-perkda-remote
Account uio-perkda

MaildirStore uio-perkda-local
Path ~/Mail/uio-perkda/
Inbox ~/Mail/uio-perkda/inbox

# INBOX
Channel uio-perkda-inbox
Master :uio-perkda-remote:"INBOX"
Slave :uio-perkda-local:inbox
Create Slave
Expunge Both
Sync All
SyncState *

# Archive
Channel uio-perkda-archive
Master :uio-perkda-remote:"Archive"
Slave :uio-perkda-local:archive
Create Slave
Expunge Both
Sync All
SyncState *

# Deleted Items
Channel uio-perkda-trash
Master :uio-perkda-remote:"Deleted Items"
Slave :uio-perkda-local:trash
Create Slave
Expunge Both
Sync All
SyncState *

# Drafts
Channel uio-perkda-drafts
Master :uio-perkda-remote:"Drafts"
Slave :uio-perkda-local:drafts
Create Slave
Expunge Both
Sync All
SyncState *

# Sent Items
Channel uio-perkda-sent
Master :uio-perkda-remote:"Sent Items"
Slave :uio-perkda-local:sent
Create Slave
Expunge Both
Sync All
SyncState *

Group uio-perkda
Channel uio-perkda-trash
Channel uio-perkda-inbox
Channel uio-perkda-archive
Channel uio-perkda-sent
Channel uio-perkda-drafts

