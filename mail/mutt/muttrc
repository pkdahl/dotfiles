set envelope_from
set mbox_type = Maildir
set folder = ~/Mail
set spoolfile = "+uio/inbox"

set timeout = 3

folder-hook uio/* source ~/.mutt/accounts/uio
folder-hook gmail/* source ~/.mutt/accounts/gmail

set sidebar_visible
set sidebar_width = 20

mailboxes "+-- UiO ----------" \
	  +uio/inbox \
	  +uio/received \
 	  +uio/sent \
	  +uio/drafts \
	  "+" \
	  "+-- Gmail --------" \
	  +gmail/inbox \
	  +gmail/all \
	  +gmail/sent \

bind index,pager \Cj sidebar-next
bind index,pager \Ck sidebar-prev
bind index,pager \Cl sidebar-open
