# ~/.bashrc

# source the system wide bashrc if it exists
if [ -e /etc/bash.bashrc ] ; then
  source /etc/bash.bashrc
fi

if [ -e /local/lib/setupfiles/bashrc ] ; then
        source /local/lib/setupfiles/bashrc
fi

# Load environment variables
if [ -e ${HOME}/.config/bash/env.bash ] ; then
    source ${HOME}/.config/bash/env.bash
fi

# Aliases

alias rm="rm -i"
alias mv="mv -i"

alias ls="ls -G" # Colours
alias ll="ls -l"
alias ll.="ls -lA"
alias l.="ls -A"
alias l="ls -CF"
alias lt="ls -lrt"

alias pu="pup"
alias po="pop"
alias ds="dirs -v"

alias ..="cd .."
alias ...="cd ../.."
alias ....="cd ../../.."

alias vi="vim"

# Prompt

if [ -e ${BASH_CONFIG_HOME}/prompt.bash ] ; then
    source ${BASH_CONFIG_HOME}/prompt.bash
fi
