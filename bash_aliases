#--
# Commands
#++
alias rm="rm -i"
alias mv="mv -i"

alias ls="ls -G" # Colours
alias ll="ls -l"
alias ll.="ls -lA"
alias l.="ls -A"
alias l="ls -CF"
alias lt="ls -lrt"

alias pu="pushd"
alias po="popd"
alias dv="dirs -v"

alias ..="cd .."
alias ...="cd ../.."
alias ....="cd ../../.."

#--
# Programs
#++
alias vi="vim"

